<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <LinearLayout
            android:id="@+id/inputframe1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:addStatesFromChildren="true"
            android:background="@drawable/circleborder" >

            <TextView
                style="@style/CustomStyle.BlackBigText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置密码：" />
            <EditText
                android:id="@+id/setpass_edittext"
                style="@style/CustomStyle.BlackBigText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:password="true"  
                android:maxLength="18"
                android:numeric="integer"
                android:hint="请输入密码" >
            </EditText>
            
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/inputframe2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputframe1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:padding="5dp"
            android:addStatesFromChildren="true"
            android:background="@drawable/circleborder" >

            <TextView
                style="@style/CustomStyle.BlackBigText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密码：" />

            <EditText
                android:id="@+id/confirmpass_edittext"
                style="@style/CustomStyle.BlackBigText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@null"
                android:password="true"
                android:singleLine="true"
                android:maxLength="18"
                android:numeric="integer"
                android:hint="请确认密码" >
            </EditText>
            
        </LinearLayout>
        
    </RelativeLayout>

</LinearLayout>
