<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/diaryeditorlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/circleborder_bold"
    android:layout_margin="2dp"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

	<LinearLayout
	    android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
    <TextView
        android:id="@+id/diaryeditor_textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:padding="2dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="日记标题："
        android:textColor="#000000" />

    <EditText
        android:id="@+id/diaryeditor_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:typeface="serif"
        android:textStyle="italic"
        android:textSize="16sp"
        android:background="@drawable/grayborder" />
    
    </LinearLayout>

    <TextView
        android:id="@+id/diaryeditor_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:padding="2dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="日记内容："
        android:textColor="#000000" />

    <EditText
        android:id="@+id/diaryeditor_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:gravity="top"
        android:typeface="serif"
        android:textStyle="italic"
        android:textSize="14sp"
        android:background="@drawable/grayborder"
        android:scrollbars="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#00000000" >

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="保存" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="返回" />
    </LinearLayout>

</LinearLayout>
