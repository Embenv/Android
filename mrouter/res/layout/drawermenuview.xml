<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawermenuview_totallayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/drawermenuview_nestedlayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/redborder" >

        <ImageView
        android:id="@+id/drawermenuview_imageview_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/drawermenuview_textview_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/drawermenuview_imageview_logo"
        android:text="取长补短"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/drawermenuview_textview_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="12sp" />

	</RelativeLayout>
	
	<RelativeLayout
        android:id="@+id/drawermenuview_nestedlayout2"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#111"
        android:gravity="center_horizontal" >
        
        <RelativeLayout
	        android:id="@+id/drawermenuview_nestedlayout2_1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dp" >

		<embedded.tools.mrouter.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/drawermenuview_circleimageview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/girl"
            app:border_color="#FFffffff"
            app:border_width="1dp" />
	
		<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/drawermenuview_circleimageview"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:text="不约儿童"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
	
		</RelativeLayout>
		
   		<RelativeLayout
	       android:id="@+id/drawermenuview_nestedlayout2_2"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:padding="10dp"
	       android:paddingLeft="30dp"
	       android:layout_below="@+id/drawermenuview_nestedlayout2_1" >
		
        <ImageButton
	       android:id="@+id/drawermenuview_imageview_control"
	       android:layout_width="48dp"
	       android:layout_height="48dp"
	       android:layout_alignParentLeft="true"
	       android:background="#00000000"
	       android:scaleType="fitXY"
	       android:src="@drawable/control" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/drawermenuview_imageview_control"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="参数设置"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
        </RelativeLayout>

   		
   		
   		<RelativeLayout
	       android:id="@+id/drawermenuview_nestedlayout2_3"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:padding="10dp"
	       android:paddingLeft="30dp"
	       android:layout_below="@+id/drawermenuview_nestedlayout2_2" >
        
		    <ImageButton
		        android:id="@+id/drawermenuview_imageview_monitor"
		        android:layout_width="48dp"
		        android:layout_height="48dp"
		        android:layout_alignParentLeft="true"
		        android:background="#00000000"
		        android:scaleType="fitXY"
		        android:src="@drawable/monitor" />
    
		    <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_toRightOf="@+id/drawermenuview_imageview_monitor"
	            android:gravity="center_vertical"
	            android:paddingLeft="30dp"
	            android:text="进程监控"
	            android:textColor="#FFFFFF"
	            android:textSize="14sp" />
        		</RelativeLayout>

   				<RelativeLayout
			       android:id="@+id/drawermenuview_nestedlayout2_4"
			       android:layout_width="match_parent"
			       android:layout_height="wrap_content"
			       android:padding="10dp"
			       android:paddingLeft="30dp"
			       android:layout_below="@+id/drawermenuview_nestedlayout2_3" >
			    <ImageButton
			        android:id="@+id/drawermenuview_imageview_termina"
			        android:layout_width="48dp"
			        android:layout_height="48dp"
			        android:layout_alignParentLeft="true"
			        android:background="#00000000"
			        android:scaleType="fitXY"
			        android:src="@drawable/termina" />
		        <TextView
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_toRightOf="@+id/drawermenuview_imageview_termina"
		            android:gravity="center_vertical"
		            android:paddingLeft="30dp"
		            android:text="命令窗口"
		            android:textColor="#FFFFFF"
		            android:textSize="14sp" />
        		</RelativeLayout>

			   	<RelativeLayout
			       android:id="@+id/drawermenuview_nestedlayout2_5"
			       android:layout_width="match_parent"
			       android:layout_height="wrap_content"
			       android:padding="10dp"
			       android:paddingLeft="30dp"
			       android:layout_below="@+id/drawermenuview_nestedlayout2_4" >
			    <ImageButton
			        android:id="@+id/drawermenuview_imageview_music"
			        android:layout_width="48dp"
			        android:layout_height="48dp"
			        android:layout_alignParentLeft="true"
			        android:background="#00000000"
			        android:scaleType="fitXY"
			        android:src="@drawable/music" />
		    	<TextView
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_toRightOf="@+id/drawermenuview_imageview_music"
		            android:gravity="center_vertical"
		            android:paddingLeft="30dp"
		            android:text="音乐播放"
		            android:textColor="#FFFFFF"
		            android:textSize="14sp" />
          	</RelativeLayout>

			<RelativeLayout
		       android:id="@+id/drawermenuview_nestedlayout2_6"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:padding="10dp"
		       android:paddingLeft="30dp"
		       android:layout_below="@+id/drawermenuview_nestedlayout2_5" >
			   <ImageButton
				    android:id="@+id/drawermenuview_imageview_webcam"
					android:layout_width="48dp"
				    android:layout_height="48dp"
				    android:layout_alignParentLeft="true"
				    android:background="#00000000"
				    android:scaleType="fitXY"
				    android:src="@drawable/webcam" />
			   <TextView
		           android:layout_width="match_parent"
		           android:layout_height="wrap_content"
		           android:layout_centerVertical="true"
		           android:layout_toRightOf="@+id/drawermenuview_imageview_webcam"
		           android:gravity="center_vertical"
		           android:paddingLeft="30dp"
		           android:text="远程监控"
		           android:textColor="#FFFFFF"
		           android:textSize="14sp" />
        	</RelativeLayout>
    
			<RelativeLayout
		       android:id="@+id/drawermenuview_nestedlayout2_7"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:padding="10dp"
		       android:paddingLeft="30dp"
		       android:layout_below="@+id/drawermenuview_nestedlayout2_6" >
		    <ImageButton
		        android:id="@+id/drawermenuview_imageview_information"
				android:layout_width="48dp"
		        android:layout_height="48dp"
		        android:layout_alignParentLeft="true"
		        android:background="#00000000"
		        android:scaleType="fitXY"
		        android:src="@drawable/information" />
    		<TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_toRightOf="@+id/drawermenuview_imageview_information"
	            android:gravity="center_vertical"
	            android:paddingLeft="30dp"
	            android:text="关于软件"
	            android:textColor="#FFFFFF"
	            android:textSize="14sp" />
        </RelativeLayout>


		<RelativeLayout
	       android:id="@+id/drawermenuview_nestedlayout2_8"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:padding="10dp"
	       android:paddingLeft="30dp"
	       android:layout_below="@+id/drawermenuview_nestedlayout2_7" >
    
		    <ImageButton
		        android:id="@+id/drawermenuview_imageview_back"
				android:layout_width="48dp"
		        android:layout_height="48dp"
		        android:layout_alignParentLeft="true"
		        android:background="#00000000"
		        android:scaleType="fitXY"
		        android:src="@drawable/back" />
		    
    		<TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_toRightOf="@+id/drawermenuview_imageview_back"
	            android:gravity="center_vertical"
	            android:paddingLeft="30dp"
	            android:text="返回上级"
	            android:textColor="#FFFFFF"
	            android:textSize="14sp" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
