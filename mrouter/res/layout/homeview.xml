<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeview_totallayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/redborder"
    tools:context="${relativePackage}.${activityClass}" >

    <ImageView
        android:id="@+id/homeview_imageview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/homeview_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="取长补短"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/homeview_nestedlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <View android:id="@+id/homeview_mark"
        android:layout_width="0dp"
        android:layout_height="0dp" 
        android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/homeview_buttonin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/homeview_mark"
            android:text="进入"
            android:background="#00000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/homeview_buttonout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignLeft="@+id/homeview_mark"
            android:text="退出"
            android:background="#00000000"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>